<%= form_with(model: weapon, local: true) do |form| %>
  <% if weapon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(weapon.errors.count, "error") %> prohibited this weapon from being saved:</h2>

      <ul>
      <% weapon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.text_field :image_url %>
  </div>

  <div class="form-group">
    <%= form.text_field :skill %>
  </div>

  <div class='c-select'>
    <%= form.collection_select :genre_id, Genre.all, :id, :title, {prompt: 'Choose a Weapon Genre'}, class: 'form-control' %>
  </div>

  <div class='c-select'>
    <%= form.collection_select :subgenre_id, Subgenre.all, :id, :title, {prompt: 'Choose a Weapon Subgenre'}, class: 'form-control' %>
  </div>

  <div class="form group">
    <%= form.submit 'Submit', class: 'btn btn-default btn-primary' %>
  </div>
<% end %>
