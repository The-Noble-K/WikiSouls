<p id="notice"><%= notice %></p>

<div class='jumbotron'>
  <p id="notice"><%= notice %></p>
  <div class='row'>
    <div class='col-lg-7'>
      <h1>
        <%= @weapon.title %>
      </h1>
      <p>
        <strong>Description:</strong><br> <%= @weapon.body %><br>
