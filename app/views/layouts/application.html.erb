<!DOCTYPE html>
<html>
  <head>
    <title>WikiSouls</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">WikiSouls</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
      </li>

        <li class="nav-item">
          <a class='nav-link' href='<%= new_weapon_path %>'>New Weapon</a>
        </li>
        <li class="nav-item">
          <a class='nav-link' href='#'>Show Weapon</a>
        </li>

        <li class="nav-item">
          <a class='nav-link' href='#'>Edit Weapon</a>
        </li>
        <li class="nav-item">
          <a class='nav-link' href='#'>Destroy Weapon</a>
        </li>

    </ul>
  </div>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      
      <li class='nav-item'>
        Logged in as '"00\\||//00"'
      </li>
      
    </div>

    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class='container'>
  <div class='row'>
    <div class='col-lg-10'>

      <%= yield %>

    </div>
    <div class='col-lg-2'>
      <ul class='nav nav-pills flex-column'>
        <li class='nav-item'><%= link_to 'All Weapons', root_path, class: 'nav-link' %></li>

        <% Genre.all.each do |genre| %>

        <li class='nav-item'>
          <a class="nav-link" href="<%= weapons_path(genre: genre.title) %>" >
            <%= genre.title %>
          </a>
        
        <% end %>

        </li>
    </div>
  </div>

  </body>
</html>
